\section*{Question 4 \hfill \normalfont{(25 pts)}}
\tab Prove the following claim by natural deduction. Use only the natural deduction rules $\vee$, $\wedge$, $\rightarrow$, $\neg$ introduction and elimination. If you attempt to make use of a lemma or equivalence, you need to prove it by natural deduction too.
\begin{equation*}
    \textbf{a)} \; p \rightarrow q, r \rightarrow s \vdash (p \vee r) \rightarrow (q \vee s)
\end{equation*}
\hfill \small{(12.5/25 pts)}

\begin{tcolorbox}
$
1)\  (p \implies\  q)  \hspace*{0pt}\hfill    Premise \\
2)\ (r \implies\  s) \hspace*{0pt}\hfill    Premise \\
$
\begin{tcolorbox}
$
3)\ p \lor r \hspace*{0pt}\hfill Assumption\\
$
\begin{tcolorbox}
$
4)\ p \hspace*{0pt}\hfill Assumption\\
5)\ q \hspace*{0pt}\hfill  1,4, \implies e\\
6)\ q \lor s \hspace*{0pt}\hfill 3,\ \lor i_1
$
\end{tcolorbox}
\begin{tcolorbox}
$
6)\ r \hspace*{0pt}\hfill Assumption\\
7)\ s \hspace*{0pt}\hfill 2,6, \implies e \\
8)\ s \lor q \hspace*{0pt}\hfill 7,\ \lor i_2
$
\end{tcolorbox}
$
9) q \lor s \hspace*{0pt}\hfill 6,8 \lor e
$

\end{tcolorbox} 
$
10)\ ( p \lor r) \implies\  (q \lor s) \hspace*{0pt}\hfill 2-9,\  \implies e
$

\end{tcolorbox}
\newpage
\begin{equation*}
     \textbf{b)} \;  (p \rightarrow (r \rightarrow \neg q)) \rightarrow ((p \wedge q) \rightarrow \neg r)
\end{equation*}

\hfill \small{(12.5/25 pts)}\\

\begin{tcolorbox}
$
1)\  (p \implies (r \implies \lnot q))  \hspace*{0pt}\hfill    Assumption \\
$
\begin{tcolorbox}
$
2)\ p \hspace*{0pt}\hfill Assumption\\
3)\ r \implies \lnot q \hspace*{0pt}\hfill 1,2\ \implies e\\
$
\begin{tcolorbox}
$
4)\ r \hspace*{0pt}\hfill Assumption\\
5)\ \lnot q  \hspace*{0pt}\hfill 3,4\ \implies e
$
\begin{tcolorbox}
$
6)\ p \land q \hspace*{0pt}\hfill Assumption\\
7)\ q \hspace*{0pt}\hfill 2,6,\ \land e \\
\bot \hspace*{0pt}\hfill 5,7
$
\end{tcolorbox}
\end{tcolorbox}
$
8)\ \lnot r \hspace*{0pt}\hfill 4-7\\
9)\  p \land q \implies \lnot r \hspace*{0pt}\hfill 6-8\\
$

\end{tcolorbox} 
$
10)\ (p \implies (r \implies \lnot q)) \implies (p \land q \implies \lnot r) \hspace*{0pt}\hfill 1-s, \implies i 
$

\end{tcolorbox}

\section*{Question 5 \hfill \normalfont{(30 pts)}}
\tab Prove the following claim by natural deduction. Use only the natural deduction rules $\vee$, $\wedge$, $\rightarrow$, $\neg$ introduction and elimination. If you attempt to make use of a lemma or equivalence, you need to prove it by natural deduction too.

\newpage
\begin{equation*}
    \textbf{a)} \; \forall x P(x) \vee \forall x Q(x) \vdash \forall x (P(x) \vee Q(x)) 
\end{equation*}

\hfill \small{(12.5/25 pts)}\\

\begin{tcolorbox}
$
1)\ \forall x P(x) \lor \forall xQ(x) \hspace*{0pt}\hfill Premise
$
\begin{tcolorbox}
$
2)\ x_0
$
\begin{tcolorbox}
$
3)\ \forall xP(x) \hspace*{0pt}\hfill Assumption\\
4)\ P(x_0) \hspace*{0pt}\hfill 3,\forall  x\ e\\
5)\ P(x_0) \lor Q(x_0) \hspace*{0pt}\hfill 4, \lor i
$
\end{tcolorbox}
\begin{tcolorbox}
$
6)\ \forall xQ(x) \hspace*{0pt}\hfill Assumption\\
7)\ Q(x_0) \hspace*{0pt}\hfill 6,\forall  x\ e\\
8)\ Q(x_0) \lor P(x_0)\hspace*{0pt}\hfill 7, \lor i
$
\end{tcolorbox}
$
9)\ Q(x_0) \lor P(x_0) \hspace*{0pt}\hfill 3-8 \lor e
$
\end{tcolorbox}
$
10)\ \forall x(P(x)\lor Q(x)) \hspace*{0pt}\hfill 9 \forall i
$
\end{tcolorbox}

\begin{equation*}
    \textbf{b)} \; \forall x P(x) \rightarrow S \vdash \exists x (P(x)\rightarrow S)\\
\end{equation*}

\hfill \small{(17.5/25 pts)}\\
\begin{tcolorbox}
$
1)\ \forall x P(x) \implies S \hspace*{0pt}\hfill Premise
$
\begin{tcolorbox}
$
2)\ x_0
$
\begin{tcolorbox}
$
3)\ \forall x P(x) \hspace*{0pt}\hfill Assumption \\
4)\ P(x_0)  \hspace*{0pt}\hfill 3,\forall e\\
5)\ S  \hspace*{0pt}\hfill 1,3,4, \implies\ e
$
\end{tcolorbox}
$7)P(x_0) \implies S \hspace*{0pt}\hfill 3-5, \implies i$
\end{tcolorbox}
$
8) \exists x (P(x)\rightarrow S) \hspace*{0pt}\hfill 2-7, \exists i
$
\end{tcolorbox}

